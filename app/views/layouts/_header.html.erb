<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav class="nav">
      <ul class="nav navbar-nav navbar-right list-home">
        <li class="list"><%= link_to "トップ", root_path, class: "list-item" %></li>
        <% if logged_in? %>
          <li class="list"><%= link_to "タスク作成", new_user_task_path(current_user), class: "list-item" %></li>
          <li class="dropdown list">
            <a href="#" class="dropdown-toggle list-item" data-toggle="dropdown" id="dropdown-title">
              <%= @current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-header">ユーザー</li>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", '#' %></li>
              <li class="dropdown-header">タスク</li>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="list"><%= link_to "ログイン", login_path,class: "list-item" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
