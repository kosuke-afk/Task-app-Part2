<% provide(:title, "@user.name") %>
<h1>タスク詳細</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered " id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2 head">ID</th>
          <td class="col-md-10"><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active head">名称</th>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <th class="active head">詳細</th>
          <td><%= @task.description %></td>
        </tr>
        <tr>
          <th class="active head">作成日</th>
          <td><%= @task.created_at %></td>
        </tr>
        <tr>
          <th class="active head">更新日</th>
          <td><%= @task.updated_at %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-lg btn-success" %>
      <%= link_to "削除", "#", class: "btn btn-lg btn-danger" %>
    </div>
  </div>
</div>