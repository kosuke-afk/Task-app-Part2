<% provide(:title, "Edit Task") %>
<h1>タスク編集</h1>
<div class="row"> 
 <div class="col-md-8 col-md-offset-2">
    <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
    <%= form_with(model: @task, url: user_task_path(@user), local: true) do |f| %>
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, class: "form-control", rows: 5 %>
      
      <%= f.submit "更新", class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>